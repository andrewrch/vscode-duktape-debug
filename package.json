{
    "name": "duk-debug",
    "displayName": "Duktape Debugger",
    "version": "0.4.7",
    "description": "Debug Adapter for Duktape runtimes.",
    "author": "Koushik Dutta (originally Harold Brenes)",
    "publisher": "koush",
    "license": "MIT (See LICENSE.txt)",
    "icon": "img/icon.png",
    "maintainers": [
        "Koushik Dutta <koushd@gmail.com>",
        "Harold Brenes <brenes.games@gmail.com> (http://hbrenes.com/cv)"
    ],
    "categories": [
        "Debuggers"
    ],
    "keywords": [
        "duktape",
        "debugger",
        "js",
        "javascript",
        "typescript"
    ],
    "engines": {
        "vscode": "^1.9.0",
        "node": "^6.3.0"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/koush/vscode-duktape-debug"
    },
    "bugs": {
        "url": "https://github.com/koush/vscode-duktape-debug/issues"
    },
    "files": [
        "out/**",
        "CHANGELOG.md",
        "VERSION"
    ],
    "dependencies": {
        "bluebird": "^3.5.3",
        "source-map": "^0.7.3",
        "vscode-debugadapter": "^1.33.0",
        "vscode-debugprotocol": "^1.33.0"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.25",
        "@types/es6-promise": "^3.3.0",
        "@types/node": "^10.12.18",
        "del": "^2.2.2",
        "fs-extra": "^2.1.2",
        "gulp": "^4.0.0",
        "gulp-sourcemaps": "^1.12.1",
        "gulp-typescript": "^3.2.4",
        "run-sequence": "^1.2.2",
        "through2": "^2.0.3",
        "tslint": "^5.12.0",
        "typescript": "^3.2.2",
        "uglify-js": "^2.8.14",
        "vscode": "^1.1.26"
    },
    "scripts": {
        "prepare": "node ./node_modules/gulp/bin/gulp.js build-release",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onCommand:duk-debug.provideInitialConfigurations"
    ],
    "contributes": {
        "breakpoints": [
            {
                "language": "javascript"
            },
            {
                "language": "typescript"
            },
            {
                "language": "haxe"
            }
        ],
        "debuggers": [
            {
                "type": "duk",
                "label": "Duktape JS",
                "program": "./out/DukDebugger.js",
                "runtime": "node",
                "initialConfigurations": "duk-debug.provideInitialConfigurations",
                "enableBreakpointsFor": {
                    "languageIds": [
                        "javascript",
                        "typescript",
                        "haxe"
                    ]
                },
                "configurationAttributes": {
                    "attach": {
                        "properties": {
                            "port": {
                                "type": "number",
                                "description": "Debug port to attach to. Default is 9091.",
                                "default": 9091
                            },
                            "address": {
                                "type": "string",
                                "description": "TCP/IP address on which the debug server is listening. Default is 'localhost'.",
                                "default": "localhost"
                            },
                            "timeout": {
                                "type": "number",
                                "description": "Retry for this number of milliseconds to connect to the debug server. Default is 10000 ms.",
                                "default": 10000
                            },
                            "sourceMaps": {
                                "type": "boolean",
                                "description": "Use JavaScript source maps (if they exist).",
                                "default": true
                            },
                            "outDir": {
                                "type": [
                                    "string",
                                    "null"
                                ],
                                "description": "If source maps are enabled, the generated code is expected in this directory. If not specified, the generated code is expected in the same directory as its source.",
                                "default": null
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop program after launch.",
                                "default": true
                            },
                            "localRoot": {
                                "type": [
                                    "string",
                                    "null"
                                ],
                                "description": "The local source root that corresponds to the 'remoteRoot'.",
                                "default": null
                            },
                            "debugLog": {
                                "type": "boolean",
                                "description": "Log to console client-server network traffic and other debug messages. This is an internal development feature but allowed in release mode for the curious.",
                                "default": false
                            },
                            "artificial": {
                                "type": "boolean",
                                "description": "Do show '__artificial' property while inspecting object or not.",
                                "default": true
                            }
                        }
                    }
                },
                "configurationSnippets": [
                    {
                        "label": "Duktape Attach",
                        "description": "Attach to a running duktape process.",
                        "body": {
                            "name": "Attach",
                            "type": "duk",
                            "request": "attach",
                            "address": "localhost",
                            "port": 9091,
                            "localRoot": "${workspaceRoot}",
                            "sourceMaps": false,
                            "outDir": null,
                            "stopOnEntry": false,
                            "debugLog": false
                        }
                    }
                ]
            }
        ]
    }
}
